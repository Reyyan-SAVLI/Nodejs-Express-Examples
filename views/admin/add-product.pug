extends ../layouts/main-layout.pug

block content
    if errorMessage
        div.alert.alert-danger.col-sm-7 !{errorMessage}
    form(action="/admin/add-product" method="POST")
        input(type="hidden" name="_csrf" value=`${csrfToken}`)
        .form-group.row
            label(for="productName").col-sm-2.col-form-label Product Name
            .col-sm-10
                input.form-control#name(type="text" name="name" value=`${name}`)
        .form-group.row
            label(for="price").col-sm-2.col-form-label Price
            .col-sm-10
                input.form-control#price(type="text" name="price" value=`${price}`)
        .form-group.row
            label(for="imageUrl").col-sm-2.col-form-label ImageUrl
            .col-sm-10
                input.form-control#imageUrl(type="text" name="imageUrl")
        //- .form-group.row
        //-     label(for="categoryid").col-sm-2.col-form-label Category
        //-     .col-sm-10
        //-         select.form-control#categoryid(name="categoryid")
        //-             option(value="-1") Select Category
        //-             each category in categories 
        //-                 option(value=`${category.id}`) #{category.name} 
        .form-group.row
            label(for="description").col-sm-2.col-form-label Description
            .col-sm-10
                textarea.form-control(name="description" cols="30" rows="10") #{description}

        .form-group.row
            .col-sm-10.offset-sm-2
                input.btn.btn-primary(type="submit" value="Save Product")