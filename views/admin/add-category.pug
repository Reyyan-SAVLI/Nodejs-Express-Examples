extends ../layouts/main-layout.pug

block content
    form(action="/admin/add-category" method="POST")
        .form-group.row
            label(for="categoryName").col-sm-2.col-form-label Category Name
            .col-sm-10
                input.form-control#name(type="text" name="name")
        .form-group.row
            label(for="description").col-sm-2.col-form-label Description
            .col-sm-10
                textarea.form-control(name="description" cols="30" rows="10")

        .form-group.row
            .col-sm-10.offset-sm-2
                input.btn.btn-primary(type="submit" value="Save Category")